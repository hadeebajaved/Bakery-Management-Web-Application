@model dynamic
@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Frosted Dreams</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/mysite.css/">
    <link rel="stylesheet" href="~/js/site.js">
    <!-- Add Bootstrap for styling -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

</head>
<body>
    <header>
    </header>

    <main>
        <div class="verify-container">
            <div class="login-form">
                <!-- Login Header -->
                <div class="login-header text-center">

                    <div class="forgot-password-container">
                        <div class="forgot-password-form">
                            <div class="forgot-password-header text-center">
                                <br /><h2>Forgot Your Password?</h2>
                                <br /> <p>Now it's time to change your password!.</p>
                            </div>

                        </div>

                        <!-- Login Form -->
                        <form method="post" action="/Login/changing">
                            <div>
                                <label>Email:</label>
                                <input type="text" name="email" value="@Model.Email" readonly />
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label><br />
                                <div class="input-group">
                                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" minlength="8" required /><br />
                                    <span class="input-group-text" id="toggle-password">
                                        <i class="fas fa-eye" id="eye-icon"></i>
                                    </span>
                                </div>
                                <small class="form-text text-muted">Password must be at least 8 characters long.</small>
                                <div class="form-group">
                                    <label for="confirm_password">Confirm Password</label><br />
                                    <div class="input-group">
                                        <input type="password" id="confirm_password" name="confirm_password" class="form-control" placeholder="Confirm your password" required /><br />
                                        <span class="input-group-text" id="toggle-confirm-password">
                                            <i class="fas fa-eye" id="eye-icon-confirm"></i>
                                        </span>
                                    </div>
                                </div>
                                <br /><button type="submit" class="btn btn-primary">Change</button>
                        </form>

                        <!-- Footer Text with Link -->
                        <div class="footer-text text-center">
                            <br />
                            <p>Remembered your password? <a href="/Login/login"> Login</a></p>
                        </div>
                    </div>
                </div>
    </main>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
