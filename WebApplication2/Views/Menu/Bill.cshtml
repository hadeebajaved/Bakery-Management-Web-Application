<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bill</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <style>
        .bill {
            margin-top: 50px;
            padding: 20px;
            border: 1px solid #ddd;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
        }

        .bill-header img {
            width: 100px;
            height: 100px;
            object-fit: cover;
        }

        .bill-header h3 {
            margin-top: 0;
        }

        .bill-items {
            margin-top: 30px;
        }

        .bill-items table {
            width: 100%;
            border-collapse: collapse;
        }

        .bill-items th, .bill-items td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .bill-total {
            margin-top: 20px;
            text-align: right;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div class="container my-5">
        <div class="bill">
            <div class="bill-header text-center">
                <img src="~/Hadeeba/Frosted Dreams.jpeg" alt="Bakery Image" />
                <h3>Frosted Dreams</h3>
            </div>

            <div class="bill-items">
                <h4>Items Purchased</h4>
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody id="billItemsTable">
                        <!-- Bill items will be displayed here -->
                    </tbody>
                </table>
            </div>

            <div class="bill-total">
                Total: $<span id="billTotal">0.00</span>
            </div>
        </div>
    </div>

    <script>
        let cart = JSON.parse(localStorage.getItem('cart')) || [];

        function generateBill() {
            const billItemsTable = document.getElementById('billItemsTable');
            const billTotal = document.getElementById('billTotal');

            billItemsTable.innerHTML = "";
            let totalBill = 0;

            cart.forEach(item => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${item.name}</td>
                    <td>$${item.price}</td>
                    <td>${item.quantity}</td>
                    <td>$${(item.price * item.quantity).toFixed(2)}</td>
                `;
                billItemsTable.appendChild(row);

                totalBill += item.price * item.quantity;
            });

            billTotal.textContent = totalBill.toFixed(2);
        }

        document.addEventListener('DOMContentLoaded', generateBill);
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

</body>
</html>
